<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ryan.infit">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/arabang_icon"
        android:label="@string/app_name"
        android:resizeableActivity="false"
        android:roundIcon="@mipmap/arabang_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".StartUpActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IntroMBTIActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MBTIActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MBTIResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TypeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConceptActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConceptRoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".First_Help_Activity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".ShowroomActivity"
            android:label="@string/title_activity_showroom"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.ryan.infit.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <activity android:name=".SecondActivity" />
        <activity android:name=".RoomSample" />
        <activity android:name=".LoadingActivity" />
        <activity android:name=".StyleInfoActivity"></activity>
    </application>

</manifest>