<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConceptRoomActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_blue"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/go_back_from_style_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:background="#00000000"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="컨셉 설명"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="8pt" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/style_info_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_style_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:background="@color/white"
        android:contentDescription="Word Cloud"
        android:padding="20dp"
        android:src="@mipmap/ic_launcher_round" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBgDark" />

    <ScrollView
        android:id="@+id/scroll_style_info"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_style_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="모던 인테리어"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="9pt" />

            <TextView
                android:id="@+id/tv_style_description_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:lineSpacingExtra="8sp"
                android:text="  고풍적인 디자인과 이쁘고 이쁜 디자인이다."
                android:textAlignment="center"
                android:textSize="6pt" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>