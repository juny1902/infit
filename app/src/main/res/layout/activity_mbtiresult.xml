<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="분석 준비 완료!"
        android:textAlignment="center"
        android:textSize="10pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="E"
            android:textAlignment="center"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progress_E"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressTint="#990000FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layoutDirection="rtl"
            android:max="9"
            android:progress="5" />

        <ProgressBar
            android:id="@+id/progress_I"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressTint="#99FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:max="9"
            android:progress="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="I"
            android:textAlignment="center"
            android:textSize="12pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="S"
            android:textAlignment="center"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progress_S"
            android:progressTint="#990000FF"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layoutDirection="rtl"
            android:max="9"
            android:progress="5" />

        <ProgressBar
            android:id="@+id/progress_N"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressTint="#99FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:max="9"
            android:progress="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="N"
            android:textAlignment="center"
            android:textSize="12pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="T"
            android:textAlignment="center"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progress_T"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressTint="#990000FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layoutDirection="rtl"
            android:max="9"
            android:progress="5" />

        <ProgressBar
            android:id="@+id/progress_F"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressTint="#99FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:max="9"
            android:progress="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="F"
            android:textAlignment="center"
            android:textSize="12pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="J"
            android:textAlignment="center"
            android:textSize="12pt" />

        <ProgressBar
            android:id="@+id/progress_J"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressTint="#990000FF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layoutDirection="rtl"
            android:max="9"
            android:progress="5" />

        <ProgressBar
            android:id="@+id/progress_P"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressTint="#99FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:max="9"
            android:progress="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="P"
            android:textAlignment="center"
            android:textSize="12pt" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_MBTI_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="당신의 성향 : "
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tv_MBTI_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_go_concept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="나에게 맞는 인테리어는 ?"
        android:textAlignment="center"
        android:textSize="10pt" />

</LinearLayout>